<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SSO Login</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>

  <style>
    .flash {
      display: none;
    }
  </style>

  <script>
    $(document).ready(function () {
      $("#btn-login").on("click", function () {
        const username = $("#username").val();
        const password = $("#password").val();
        const serviceURL = $("#redirectURL").val();

        $("#flashMsg").empty("");

        $.ajax({
          type: "POST",
          url: `${window.location.origin}/login`,
          data: { username, password, serviceURL },
          withCredentials: true,
          success: function (data) {
            $("#flashMsg").addClass("flash");
            console.log(">>> data", data);
            const redirectURL = `${data.redirectURL}/code?ssoToken=${data.code}`;
            window.location.href = redirectURL;
          },
          error: function (request, status, error) {
            $("#password").val("");
            $("#flashMsg").removeClass("flash");
            $("#flashMsg").append(request.responseText);
          },
        });
      });

      $("#google").on("click", function () {
        localStorage.removeItem("clientURL");
        localStorage.setItem("clientURL", $("#redirectURL").val());
        window.location.href = "/auth/google";
      });

      $("#facebook").on("click", function () {
        localStorage.removeItem("clientURL");
        localStorage.setItem("clientURL", $("#redirectURL").val());
        window.location.href = "/auth/facebook";
      });

      $('#spanResetPassword').on('click', function() {
        $('#resetPasswordModal').modal('show')
      })
    });
  </script>

  <body>
    <input type="text" value="<%= redirectURL %>" hidden id="redirectURL" />
    <div class="container">
      <div class="row">
        <form action="/login" method="POST">
          <div class="col-6 mx-auto my-auto">
            <fieldset class="border rounded-3 p-3">
              <legend class="float-none w-auto px-3">Đăng nhập</legend>

              <div
                class="alert alert-danger my-1 flash"
                role="alert"
                id="flashMsg"
              ></div>

              <div class="mb-3 col-12">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="username"
                  name="username"
                />
              </div>
              <div class="mb-3 col-12">
                <label for="exampleInputPassword1" class="form-label"
                  >Mật khẩu</label
                >
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>
              <button type="button" id="btn-login" class="btn btn-primary">
                Đăng nhập
              </button>
              <div class="text-center mt-3 cursor-pointer">
                <a href="/forgot-password" class="text-decoration-none" href="/forgot-password"
                  >Quên mật khẩu?
                </a>
              </div>

              <hr />
              <div class="text-center">
                <span>Hoặc đăng nhập với: </span>
              </div>
              <div class="text-center mt-2">
                <i
                  id="google"
                  style="font-size: 32px; cursor: pointer; margin-right: 12px"
                  class="bi bi-google"
                  title="Đăng nhập với Google"
                >
                </i>

                <i
                  id="facebook"
                  style="font-size: 32px; cursor: pointer"
                  class="bi bi-facebook"
                  title="Đăng nhập với facebook"
                ></i>
              </div>
            </fieldset>
          </div>
        </form>
      </div>
    </div>


    <!-- Modal -->
    <div
      class="modal fade"
      id="resetPasswordModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">...</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
            <button type="button" class="btn btn-primary">Xác nhận</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
